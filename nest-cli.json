{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
      {
        "include": "i18n/**/*",
        "outDir": "dist/src"
      },
      {
        "include": "assets/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
